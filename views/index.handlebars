<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="burger_name">
  </div>
  
  <button class="btn btn-outline-success" type="submit">Add Burger</button>
</form>
<br>
<div class="row justify-content-around">
    <div class="col-6">
    <h2>Burgers to be eaten!</h2>
    <ul>
    {{#each burgers}}
      {{#unless devoured}}
      <li> {{this.burger_name}}</li>
      <button class="change-devoured btn btn-outline-success" data-id="{{this.id}}">Devour</button>
      {{/unless}}
    {{/each}}
</ul>
    </div>
    <div class="col-6">
      <h2>Burgers that are devoured!</h2>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
           <li> {{this.burger_name}}</li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>











